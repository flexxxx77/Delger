{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ✅ Стандарт mapping — ямар ч “src/src” давхардахгүй
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["styled-jsx"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types"],
  "exclude": ["node_modules"]
}
